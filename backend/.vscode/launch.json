    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug server",
            "type": "node",
            "request": "launch",
            "env": {
                "npm_package_name": "debugger",
                "npm_package_version": "0.0.1",
            },
            "runtimeArgs": [
                "--inspect-brk",
                "${workspaceRoot}/build/index.js"
            ],
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "port": 9229
        },
        {
            "name": "Debug test",
            "type": "node",
            "request": "launch",
            "env": {
                "npm_package_name": "debugger",
                "npm_package_version": "0.0.1",
            },
            "runtimeArgs": [
                "--inspect-brk",
                "${workspaceRoot}/node_modules/.bin/jest",
                "--runInBand",
            ],
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "port": 9229
        },
    ]
}